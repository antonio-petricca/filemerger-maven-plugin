<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.antonio-petricca</groupId>
        <artifactId>filemerger-maven-plugin-pom</artifactId>
        <version>0.0.1</version>
    </parent>

    <name>File Merger maven plugin tester</name>

    <artifactId>filemerger-maven-plugin-tester</artifactId>
    <version>0.0.1</version>

    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>io.github.antonio-petricca</groupId>
                <artifactId>filemerger-maven-plugin</artifactId>
                <version>0.0.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>file-merge</goal>
                        </goals>
                        <configuration>
                           <targetFiles>
                                <targetFile>
                                    <charset>UTF-8</charset>
                                    <file>${project.build.outputDirectory}/tester-resource.txt</file>
                                    <indentation>4</indentation>
                                    <sourceFiles>
                                        <sourceFile>
                                            <encode>false</encode>
                                            <file>src/main/assets/source-file-1.txt</file>
                                            <placeholder>@SOURCE_FILE_1@</placeholder>
                                        </sourceFile>
                                        <sourceFile>
                                            <encode>true</encode>
                                            <file>src/main/assets/source-file-2.txt</file>
                                            <placeholder>@SOURCE_FILE_2@</placeholder>
                                        </sourceFile>
                                    </sourceFiles>
                                </targetFile>
                           </targetFiles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

</project>
